[user]
  name       = Manuel Meurer
  email      = manuel@meurer.io
  signingkey = 2806A868
[alias]
  s    = show
  sh   = stash -u
  sp   = stash pop
  ss   = stash show -p
  sd   = stash drop
  a    = add
  ap   = add --patch
  b    = branch
  ba   = branch -a
  st   = status -sb
  c    = commit
  cm   = commit -m
  cam  = commit -am
  cmm  = commit --amend --reuse-message=HEAD
  camm = commit -a --amend --reuse-message=HEAD
  co   = checkout
  p    = push
  po   = !bash -c 'git push origin `git rev-parse --abbrev-ref HEAD` -u' -
  pf   = push --force
  pu   = pull
  pur  = pull --rebase
  m    = merge
  r    = revert
  cp   = cherry-pick
  di   = diff
  dic  = diff --cached
  re   = rebase
  rc   = rebase --continue
  rs   = rebase --skip
  ra   = rebase --abort
  ri   = rebase --interactive head~10
  rh   = reset head
  l    = log --pretty=format:\"%C(yellow)%h %C(blue)<%ad> %C(reset)%s%C(green) [%cn]%C(auto)%d\" --graph --decorate --date=short
  ll   = log --pretty=format:\"%C(yellow)%h %C(blue)<%ad> %C(reset)%s%C(green) [%cn]%C(auto)%d\" --graph --decorate --date=short --numstat
  sm   = submodule
  sm-pull = submodule foreach git pull --rebase
  oldest-ancestor = !bash -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = red reverse
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  editor = code --wait
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[rebase]
  autosquash = true
[commit]
  gpgsign = true
[status]
  showUntrackedFiles = all
[transfer]
  fsckObjects = true
[diff]
  colorMoved = default
  tool = default-difftool
[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE
[fetch]
  fsckobjects = false
[submodule]
  recurse = true
[init]
  defaultBranch = main
[http]
  postBuffer = 524288000
[gpg]
  program = /usr/local/bin/gpg
