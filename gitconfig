[user]
  name = Manuel Meurer
  email = manuel@meurer.io
[alias]
  s    = show
  sh   = stash -u
  sp   = stash pop
  ss   = stash show -p
  sd   = stash drop
  a    = add
  ap   = add --patch
  b    = branch
  ba   = branch -a
  st   = status -sb --ahead-behind
  c    = commit
  cm   = "!f() { git commit -m \"$*\"; }; f"
  cam  = "!f() { git commit -am \"$*\"; }; f"
  cmm  = commit --amend --reuse-message=HEAD
  camm = commit -a --amend --reuse-message=HEAD
  rw   = commit --amend
  co   = checkout
  p    = push
  po   = !bash -c 'git push origin `git rev-parse --abbrev-ref HEAD` -u' -
  pf   = push --force
  pu   = pull
  pur  = pull --rebase
  m    = merge
  r    = revert
  cp   = cherry-pick
  di   = diff
  dic  = diff --cached
  re   = rebase
  rc   = rebase --continue
  rs   = rebase --skip
  ra   = rebase --abort
  ri   = "!f() { \
           COMMIT_COUNT=$(git rev-list --count HEAD); \
           if [ \"$COMMIT_COUNT\" -gt 30 ]; then \
             git rebase -i HEAD~30; \
           else \
             git rebase -i --root; \
           fi; \
         }; f"
  fu   = "!f() { \
           target=$1; \
           shift; \
           stash_name=\"fu-autostash\"; \
           git commit --fixup=$target \"$@\" && \
           git stash push -m \"$stash_name\" && \
           git rebase --autosquash ${target}^ && \
           if git stash list | head -1 | grep -q \"$stash_name\"; then \
             git stash pop; \
           fi; \
         }; f"
  rh   = reset head
  l    = log --pretty=format:\"%C(yellow)%h %C(blue)<%ad> %C(reset)%s%C(green) [%cn]%C(auto)%d\" --graph --decorate --date=short
  ll   = log --pretty=format:\"%C(yellow)%h %C(blue)<%ad> %C(reset)%s%C(green) [%cn]%C(auto)%d\" --graph --decorate --date=short --numstat
  sm   = submodule
  sm-pull = submodule foreach git pull --rebase
  oldest-ancestor = !bash -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = red reverse
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
  editor = code --wait
[push]
  default = current
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[rebase]
  autosquash = true
[commit]
  gpgsign = true
  verbose = true
[status]
  showUntrackedFiles = all
[transfer]
  fsckObjects = true
[diff]
  colorMoved = default
  tool = default-difftool
  algorithm = histogram
[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE
[fetch]
  fsckobjects = false
  showForcedUpdates = true
[submodule]
  recurse = true
[init]
  defaultBranch = main
[http]
  postBuffer = 524288000
[scalar]
  repo = /Users/manuel/code/uplink/app
[maintenance]
  repo = /Users/manuel/code/uplink/app
[help]
  autocorrect = prompt
